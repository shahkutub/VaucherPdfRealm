<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    >

    <LinearLayout
        android:id="@+id/my_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="বিসমিল্লাহির রাহমানির রাহিম"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                />

             <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="আমেনা ট্রেডার্স"
                android:textColor="#000"
                 android:gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                />


             <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="প্রতিষ্ঠাতাঃ মরহুম হাজি মুহাম্মদ বাচ্চু মিয়া "
                android:textColor="#000"
                 android:gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                />


             <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="প্রোপাইটর : মোঃ শাহ পরান"
                android:textColor="#000"
                 android:gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                />


             <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="পূর্ববাজার ধর্মপাশা,ধর্মপাশা,সুনামগঞ্জ"
                android:textColor="#000"
                 android:gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="মোবাইল:০১৭২৫৫৭৬১৫৬,০১৭৫৩৭৪৫০২০"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="নাম: "
                        android:textColor="#000"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        />


                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="তারিখঃ "
                        android:textColor="#000"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_3sdp"
                >
            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ঠিকানা:"
                android:textColor="#000"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/tvMobile"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="মোবাইল: "
                android:textColor="#000"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                />

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/linProductView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:padding="@dimen/_2sdp"
                    android:text="Drug"
                    android:textColor="#000"
                    android:background="@drawable/tv_bg"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    />

                <TextView
                    android:id="@+id/etItemUnitPrice"
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:text="Price"
                    android:gravity="center"
                    android:textColor="#000"
                    android:background="@drawable/tv_bg"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    />
                <TextView
                    android:id="@+id/etItemQuantity"
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:layout_height="wrap_content"
                    android:text="Qty"
                    android:gravity="center"
                    android:padding="@dimen/_2sdp"
                    android:textColor="#000"
                    android:background="@drawable/tv_bg"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    />
                <TextView
                    android:id="@+id/etItemTotal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:text="Total"
                    android:gravity="center"
                    android:background="@drawable/tv_bg"
                    android:textColor="#000"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    />

                <ImageButton
                    android:id="@+id/minus"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:visibility="gone"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_clear_black_24dp" />
            </LinearLayout>


            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    >

                </android.support.v7.widget.RecyclerView>
            </android.support.v4.widget.NestedScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_3sdp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:text=" Total"
                    android:gravity="center|right"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    />

                <TextView
                    android:id="@+id/tvSubTotal"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:padding="@dimen/_3sdp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    />


                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:visibility="gone"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_clear_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:text="Discount(10%)"
                    android:gravity="center|right"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    />

                <TextView
                    android:id="@+id/tvDiscount"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:padding="@dimen/_3sdp"
                    android:gravity="center"

                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    />


                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:visibility="gone"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_clear_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:text="Service Charge(15%)"
                    android:gravity="center|right"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    />

                <TextView
                    android:id="@+id/tvServiceCharge"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:padding="@dimen/_3sdp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    />


                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:visibility="gone"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_clear_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:text="Net Total"
                    android:gravity="center|right"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    />

                <TextView
                    android:id="@+id/tvNetTotal"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:padding="@dimen/_3sdp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    />


                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:visibility="gone"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_clear_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/_50sdp"
                >
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/view_bg"
                    android:text="print"
                    android:textColor="#fff"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>